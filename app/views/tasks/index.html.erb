<% @tasks.each do |task| %>
  <div class="index_row clearfix">
    <h2 class="todo_list_title"><%= link_to task.title, task %></h2>
    <p class="task"><%= task.description %></p>
  </div>
<% end %>

<% if logged_in?(:site_admin) %>
<div class="links">
  <%= link_to 'Nueva Clase', new_task_path %>
</div>
<% end %>
