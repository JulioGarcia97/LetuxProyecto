<h1 class="todo_list_title">Iniciar Sesion</h1>

<br>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <div class="pages-intro">

    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder:'Email', class:'form' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder:'Contraseña' , class:'form' %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Iniciar Sesión" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
    
    
  <% end %>